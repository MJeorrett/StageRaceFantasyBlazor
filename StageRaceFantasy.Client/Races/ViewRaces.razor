@page "/races"

@using StageRaceFantasy.Application.Races.Queries.GetAll

@inject HttpClient Http

<MatHeadline2>Races</MatHeadline2>
<div>
    <MatButton Link="races/create">Create New</MatButton>
</div>

@if (vm == null)
{
    <Loader />
}
else if (vm.Races.Count == 0)
{
    <MatBody1 Style="font-weight: bolder"><em>No Races Found.</em></MatBody1>
}
else
{
    <MatTable Items="@vm.Races"
              FilterByColumnName="Name"
              ShowPaging="false"
              PageSize="int.MaxValue"
              Striped="true">
        <MatTableHeader>
            <th>Id</th>
            <th>Name</th>
            <th>Team Size</th>
            <th></th>
        </MatTableHeader>
        <MatTableRow>
            <td>@context.Id</td>
            <td>@context.Name</td>
            <td>@context.FantasyTeamSize</td>
            <td>
                <MatIconButton Link="@($"races/{context.Id}/edit")" Icon="edit" />
                <MatButton Link=@($"races/{context.Id}/entries")>Entries</MatButton>
                <MatButton Link=@($"races/{context.Id}/stages")>Stages</MatButton>
            </td>
        </MatTableRow>
    </MatTable>
}

@code {
    private GetAllRacesVm vm;

    protected override async Task OnInitializedAsync()
    {
        vm = await Http.GetFromJsonAsync<GetAllRacesVm>("api/races");
    }
}
