@page "/riders"
@using StageRaceFantasy.Shared.Models
@inject HttpClient Http

<h1>Riders</h1>

@if (riders == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var race in riders)
            {
            <tr>
                <td>@race.Id</td>
                <td>@race.FirstName</td>
                <td>@race.LastName</td>
            </tr>
            }
        </tbody>
    </table>
}

@code {
    private Rider[] riders;

    protected override async Task OnInitializedAsync()
    {
        riders = await Http.GetFromJsonAsync<Rider[]>("api/riders");
    }
}
