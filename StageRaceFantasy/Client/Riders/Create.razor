@page "/riders/create"

@using StageRaceFantasy.Shared.Models

@inject HttpClient http
@inject NavigationManager navigationManager

<h3>Create Rider</h3>

<Form
      ButtonText="Create Rider"
      rider="@rider"
      OnValidSubmit="@CreateRider" />

@code {
    Rider rider = new Rider();

    async Task CreateRider()
    {
        await http.PostAsJsonAsync("api/riders", rider);
        navigationManager.NavigateTo("riders");
    }
}
