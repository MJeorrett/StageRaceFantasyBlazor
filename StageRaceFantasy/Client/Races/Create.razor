@page "/races/create"

@using StageRaceFantasy.Shared.Models

@inject HttpClient http
@inject NavigationManager navigationManager

<h3>Create Race</h3>

<Form
      ButtonText="Create Race"
      race="@race"
      OnValidSubmit="@CreateRider" />

@code {
    Race race = new Race();

    async Task CreateRider()
    {
        await http.PostAsJsonAsync("api/races", race);
        navigationManager.NavigateTo("races");
    }
}
